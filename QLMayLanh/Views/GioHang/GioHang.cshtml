
@using QLMayLanh.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold;color:red">
        <td align="left">Mã sản phẩm</td>
        <td align="left">Tên sản phẩm</td>
        <td align="left">Hình ảnh</td>
        <td align="left">Số lượng</td>
        <td align="left">Đơn giá</td>
        <td align="left">Thành tiền</td>
        <td algin="left"></td>
        <td align="left"></td>
        <td align="left"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td align="left">@item.iMaSP</td>
            <td align="left">@item.sTenSP</td>
            <td align="left"><img src="~/Assets/images/@item.sHinhAnh" width="100" height="100" /></td>
            @using(Html.BeginForm("CapNhatGioHang","GioHang",new{@iMaSP=item.iMaSP}))
            {
            <td align="left"><input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong"</td>
            <td align="left">@String.Format("{0:0,0}",item.dDonGia)</td>
            <td align="left">@String.Format("{0:0,0}",item.dThanhTien)</td>
            <td align="left"><a style="color:blue" href="@Url.Action("Details","MayLanh", new {id=item.iMaSP})">Chi tiết</a></td>
            <td align="left"><a style="color:blue" href="@Url.Action("XoaGioHang","GioHang", new {@iMaSP=item.iMaSP})">Xóa</a></td>
            <td algin="left"><input type="submit" value="Cập nhật"</td>    
            @*<td algin="left">@Html.ActionLink("Xóa","XoaGioHang",new{@iMaSP=item.iMaSP})
            </td>*@
            }
        </tr>
    }
    <tr style="font-weight:bold;text-align:right;color:red">
        <td colspan="4">Số lượng sản phẩm: @ViewBag.Tongsoluong</td>
        <td colspan="6">Tổng tiền: @String.Format("{0:0,0}",ViewBag.Tongtien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold;text-align:right">
        <td colspan="9">
            <a style="color:blue" href="@Url.Action("XoaTatCaGioHang","GioHang")">Xóa giỏ hàng</a>
        </td>
    </tr>
    <tr style="font-weight:bold;text-align:center">
        <td colspan="9">
            <a style="color:blue" href="@Url.Action("DatHang","GioHang")">Đặt hàng</a>
        </td>
    </tr>

</table>
