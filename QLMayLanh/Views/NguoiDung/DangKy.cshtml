@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td align="left">Họ tên khách hàng:</td>
            <td align="left">@Html.TextBox("HoTen")
                 @ViewData["Loi1"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Tên đăng nhập:</td>
            <td align="left">@Html.TextBox("TenDN")
                 @ViewData["Loi2"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Mật khẩu:</td>
            <td align="left">@Html.Password("MatKhau") 
                @ViewData["Loi3"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Nhập lại mật khẩu:</td>
            <td align="left">@Html.Password("NhapLaiMK")
                 @ViewData["Loi4"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Email:</td>
            <td align="left">@Html.TextBox("Email") 
                @ViewData["Loi5"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Điện thoại:</td>
            <td align="left">@Html.TextBox("DienThoai") 
                @ViewData["Loi6"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Địa chỉ:</td>
            <td align="left">@Html.TextBox("DiaChi") 
                @ViewData["Loi7"]</td>
        </tr>
        <tr style="height:40px">
            <td align="left">Ngày sinh:</td>
            <td align="left"><input type="date" name="NgaySinh" /></td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="Đăng ký" /></td>
        </tr>
    }
</table>
