@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    <h3 style="text-align:center">ĐĂNG NHẬP</h3>
   @using(Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td align="left">Tên đăng nhập:</td>
            <td align="left">@Html.TextBox("TenDN") @ViewData["Loi1"]</td>
        </tr>
        
        <tr style="height:40px">
            <td align="left">Mật khẩu:</td>
            <td align="left">@Html.Password("MatKhau") @ViewData["Loi1"]</td>
        </tr>
        <tr style="height:40px">
            <td ></td>
            <td><input type="submit" value="Đăng nhập"</td>
        </tr>
    }
</table>

